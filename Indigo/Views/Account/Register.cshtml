@using Indigo.ViewModels
@model UserRegisterVM
<section class="vh-100 bg-image"
         style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                            <form method="post" asp-action="register" asp-controller="account">

                                <div class="form-outline mb-4">
                                    <input asp-for="UserName" class="form-control form-control-lg" />
                                    <label asp-for="UserName" class="form-label" >Your Name</label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <input asp-for="FullName" class="form-control form-control-lg" />
                                    <label asp-for="FullName" class="form-label">FullName</label>
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Email" class="form-control form-control-lg" />
                                    <label asp-for="Email" class="form-label">Email </label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Password" class="form-control form-control-lg" />
                                    <label asp-for="Password" class="form-label">Password</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="RepeatPassword" class="form-control form-control-lg" />
                                    <label asp-for="RepeatPassword" class="form-label">RepeatPassword</label>
                                    <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                                </div>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                
                                <div class="d-flex justify-content-center">
                                    <button type="submit"
                                            class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                        Register
                                    </button>
                                </div>

                                

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>