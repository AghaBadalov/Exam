
@model List<Post>
@{
    int counter=0;
}

<table class="table">
    
    <thead>
        <div class="container" style="margin-top:5px;">
        <div><a asp-action="create" asp-controller="post" type="button" class="btn btn-primary">Create</a></div>
        
        <tr>
            <th scope="col">Counter</th>
            <th scope="col">Id</th>
            <th scope="col">Tittle</th>
            <th scope="col">Desc</th>
            <th scope="col">Image</th>
            <th scope="col">Actions</th>

        </tr>
        </div>
    </thead>
    
    <tbody>
       @foreach (var item in Model)
        {
            counter++;
            <tr>
            <th scope="row">@counter</th>
            <td>@item.Id</td>
            <td>@item.Tittle</td>
            <td>@item.Desc</td>
                <td>
                    <img style="max-width:100px"  src="~/uploads/posts/@item.ImageUrl">
                </td>
                <td>
                    <a asp-action="update" asp-controller="post" asp-route-id="@item.Id" type="button" class="btn btn-primary">Update</a>
                    <a asp-action="delete" asp-controller="post" asp-route-id="@item.Id" type="button" class="btn btn-danger">Delete</a>
                </td>

        </tr>
        }
        
    </tbody>
</table>
